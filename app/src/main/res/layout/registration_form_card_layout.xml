<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/direction_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardElevation="10dp"
    card_view:cardBackgroundColor="#feb309">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="7dp">

        <TextView
            android:id="@+id/reg_training_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#1d4a93"
            android:gravity="left"
            android:text="Training Name" />
        <TextView
            android:id="@+id/reg_training_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:gravity="left"
            android:text=""
            android:layout_below="@id/reg_training_name"/>
        <TextView
            android:id="@+id/reg_training_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#1d4a93"
            android:gravity="left"
            android:text="Training Details"
            android:layout_below="@id/reg_training_name_content"/>
        <TextView
            android:id="@+id/reg_training_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:gravity="left"
            android:text=""
            android:layout_below="@id/reg_training_detail"/>
        <TextView
            android:id="@+id/reg_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#1d4a93"
            android:gravity="left"
            android:text="Registration Form"
            android:layout_below="@id/reg_training_detail_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/reg_form">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/enq_heading">
                <TextView
                    android:id="@+id/name_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#1d4a93"
                    android:gravity="left"
                    android:text="Name*" />
                <EditText
                    android:id="@+id/name_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:background="#ffffff"
                    android:textSize="19sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#000000"
                    android:layout_below="@id/name_heading"/>


                <TextView
                    android:id="@+id/phone_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#1d4a93"
                    android:gravity="left"
                    android:text="Mobile*"
                    android:layout_below="@id/name_content" />
                <EditText
                    android:id="@+id/phone_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile No. (10 Digits)"
                    android:padding="5dp"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:background="#ffffff"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#000000"
                    android:layout_below="@id/phone_heading"/>


                <TextView
                    android:id="@+id/email_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#1d4a93"
                    android:gravity="left"
                    android:text="Email"
                    android:layout_below="@id/phone_content" />
                <EditText
                    android:id="@+id/email_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email ID"
                    android:padding="5dp"
                    android:inputType="textEmailAddress"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:background="#ffffff"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#000000"
                    android:layout_below="@id/email_heading"/>


                <TextView
                    android:id="@+id/msg_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#1d4a93"
                    android:gravity="left"
                    android:text="Other Info"
                    android:layout_below="@id/email_content" />
                <EditText
                    android:id="@+id/msg_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Other Info"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:background="#ffffff"
                    android:gravity="top"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#000000"
                    android:layout_below="@id/msg_heading"/>

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/register_now"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="Register Me"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_below="@id/msg_content"
                    android:background="#000000"
                    android:onClick="submit_registration"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.v7.widget.CardView>