<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="10dp"
    card_view:cardBackgroundColor="#feb309">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/it_serv_text_heading"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#1d4a93"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/it_serv_text_details"
            android:textStyle="bold"
            android:textSize="17sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:gravity="left"
            android:text=""
            android:layout_marginBottom="5dp"
            android:layout_below="@id/it_serv_text_heading"/>

        <Button
            android:id="@+id/contact_it"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="Contact Now"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_below="@id/it_serv_text_details"
            android:background="#000000"
            android:onClick="loadContactUs"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>