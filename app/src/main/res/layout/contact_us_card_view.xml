<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/direction_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardElevation="10dp"
    card_view:cardBackgroundColor="#feb309">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="7dp">
        <TextView
            android:id="@+id/call_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#1d4a93"
            android:gravity="center"
            android:text="Call Us" />
        <TextView
            android:id="@+id/call_heading_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:gravity="center"
            android:text="+91 9214542331"
            android:layout_below="@id/call_heading"/>
        <TextView
            android:id="@+id/mail_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#1d4a93"
            android:gravity="center"
            android:text="Mail Us"
            android:layout_below="@id/call_heading_content"/>
        <TextView
            android:id="@+id/mail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:gravity="center"
            android:text="avj.jaipur@yahoo.com"
            android:layout_below="@id/mail_heading"/>
        <TextView
            android:id="@+id/address_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#1d4a93"
            android:gravity="center"
            android:text="Address"
            android:layout_below="@id/mail_content"/>
        <TextView
            android:id="@+id/address_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000000"
            android:gravity="left"
            android:text="80, Janakpuri 1st, Near Jain Temple, Imli Phatak, Jaipur"
            android:layout_below="@id/address_heading"/>
        <TextView
            android:id="@+id/enq_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#1d4a93"
            android:gravity="center"
            android:text="Enquiry"
            android:layout_below="@id/address_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enq_heading">
            <TextView
                android:id="@+id/name_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#1d4a93"
                android:gravity="center"
                android:text="Name*" />
            <EditText
                android:id="@+id/name_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:padding="5dp"
                android:textStyle="bold"
                android:background="#ffffff"
                android:textSize="19sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#000000"
                android:layout_below="@id/name_heading"/>


            <TextView
                android:id="@+id/phone_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#1d4a93"
                android:gravity="center"
                android:text="Mobile*"
                android:layout_below="@id/name_content" />
            <EditText
                android:id="@+id/phone_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No. (10 Digits)"
                android:padding="5dp"
                android:inputType="phone"
                android:maxLength="10"
                android:textStyle="bold"
                android:textSize="19sp"
                android:background="#ffffff"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#000000"
                android:layout_below="@id/phone_heading"/>


            <TextView
                android:id="@+id/email_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#1d4a93"
                android:gravity="center"
                android:text="Email"
                android:layout_below="@id/phone_content" />
            <EditText
                android:id="@+id/email_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email ID"
                android:padding="5dp"
                android:inputType="textEmailAddress"
                android:textStyle="bold"
                android:textSize="19sp"
                android:background="#ffffff"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#000000"
                android:layout_below="@id/email_heading"/>


            <TextView
                android:id="@+id/msg_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#1d4a93"
                android:gravity="center"
                android:text="Message*"
                android:layout_below="@id/email_content" />
            <EditText
                android:id="@+id/msg_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Message"
                android:padding="5dp"
                android:textStyle="bold"
                android:background="#ffffff"
                android:gravity="top"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#000000"
                android:layout_below="@id/msg_heading"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="Submit"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_below="@id/msg_content"
                android:background="#000000"
                android:onClick="submit_contact_us_query"/>
        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</android.support.v7.widget.CardView>